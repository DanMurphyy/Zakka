<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beck"
    tools:context=".HelpFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/informative"
        android:layout_gravity="center_horizontal"
        android:contentDescription="info" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/malumot"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/choose"
        android:layout_gravity="center_horizontal"
        android:contentDescription="how to play" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="@string/oyin"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Savollar www.ziyouz.com saytidan olingan"
        android:textColor="@color/purple_200"
        android:textSize="15dp" />
    </LinearLayout>
</ScrollView>